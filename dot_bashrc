#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

PS1='[\u@\h \W]\$ '

# aliases
if [ -f ~/.aliases ]; then
	. ~/.aliases
fi

# wal colorscheme
if [[ -d ~/.cache/wal ]]
then
    (cat ~/.cache/wal/sequences &)
    source ~/.cache/wal/colors.sh
fi
# Environment Vars
export XDG_USER_CONFIG_DIR=~/.config
export PATH=$PATH:~/bin:~/.local/bin

# Source 
[ -f ~/.fzf.bash ] && source ~/.fzf.bash
